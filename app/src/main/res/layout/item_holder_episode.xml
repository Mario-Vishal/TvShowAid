<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/back_aplha_0.35"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_holder_episode_season_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Season 1 : Episode 10"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_weight="0.7"
            />
        <TextView
            android:id="@+id/item_holder_episode_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12th Oct 2022"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_weight="0.3"
            android:textAlignment="textEnd"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
       android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_holder_episode_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="MARIO THE LEGEND"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>


</LinearLayout>